}

/* 搜索 */

.search-bar {
  align-items: center;
  display: flex;
  height: 60rpx;
  line-height: 50rpx;
  padding: 10rpx 2.5%;
  margin-bottom: 0;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99999;
}
.topnav {
  background-color: #3283E3;
}

.search-input {
  background: #f0f0f0;
  flex: 0.9;
  padding: 0 20rpx;
  margin-left: 18rpx;
  margin-bottom: 0;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #878787;
  height: 55rpx;
}

.search-input text {
  font-size: 30rpx;
  color: #727272;
}

.my-search {
  padding-bottom: 8rpx;
}
/* 驾考宝典 */
.driving-test{
  display: block;
  color: #fff;
  background: #3283E3;
  width: 100%;
  padding: 22rpx 0;
  text-align: center;
  font-size: 42rpx;
}
.driving-body{
  width: 96%;
  margin:20rpx auto;
  background: #fff;
  padding:5rpx 0 20rpx 0;
  border-radius: 20rpx;
}
.driving-content{
  display: flex;
  justify-content: space-between;
  width: 96%;
  margin:20rpx auto;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 15rpx 0;
}
.driving-content label{
  display: block;
  font-size: 28rpx;
}
.driving-content text{
  font-size: 26rpx;
  color: #666;
  margin-top: 40rpx;
  display: block;
}
.driving-text {
 width: 75%;
}

.driving-img{
  width: 150rpx;
  height: 150rpx;
  background:#8A2BE2;

}
