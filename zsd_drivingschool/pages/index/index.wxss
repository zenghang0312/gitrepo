.kind-pic {
  margin-bottom: 0;
  padding: 30rpx 2.5%;
  display: flex;
  font-size: 28rpx;
  text-align: center;
  justify-content: space-between;
  flex-flow: wrap;
  color: #5e5e5e;
  background: #fff;
}

.kind-img {
  height: 100rpx;
  width: 100rpx;
  overflow: hidden;
